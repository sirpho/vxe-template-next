{
  "name": "@sirpho/vxe-template-next",
  "version": "1.0.0",
  "homepage": "https://github.com/sirpho/vxe-template-next",
  "repository": {
    "type": "git",
    "url": "https://github.com/sirpho/vxe-template-next"
